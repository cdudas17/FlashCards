public class FlashCard {
	String name;
	String desc;
	
	int right = 0;  // tracks right and wrong answers
	int wrong = 0;
	
	FlashCard backup = new FlashCard();
	/**********************************
	 * STORES INFO
	 */
	
	/*accesor methods*/
	public String getName(){
		return name;
	}
	
	public String getDesc(){
		return desc;
	}
	
	/*Mutator mathods*/
	public void setName(String pName){
		name = pName;
		this.backup();
	}
	
	public void setDesc(String pDesc){
		desc = pDesc;
		this.backup();
	}
	
	/*BACKUP*/
	private void bName(String pName){
		name = pName;
	}
	
	private void bDesc(String pDesc){
		desc = pDesc;
	}
	
	public void backup(){
		backup.bName(name);
		backup.bDesc(desc);
	}
	/********************/
	
	/*
	 * Compare String parameter to name true if they're the same
	 */
	 public boolean compareName(String guess){
 		boolean answer = name.equalsIgnoreCase(guess);
 		if(answer){
 			right++;
 			return answer;
 		}
 		wrong++;
	 	return false;
	 }
}
